<?xml version="1.0" encoding="UTF-8"?>
<!-- mainly used at the startPage for the single profileTabs -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape>
            <solid android:color="@color/colorShadow"/>

            <padding


                android:right="@dimen/tiny"
                android:bottom="@dimen/tiny" />

            <corners
                android:bottomLeftRadius="@dimen/xxlarge"
                android:bottomRightRadius="@dimen/large"
                android:topLeftRadius="@dimen/xxxlarge"
                android:topRightRadius="@dimen/xlarge" />
        </shape>

    </item>

    <!-- Border and Filling -->
    <item>
        <shape>
            <solid android:color="@color/colorSecondaryLight" />

            <stroke
                android:width="@dimen/tiny"
                android:color="@color/colorSecondary" />

            <padding
                android:bottom="@dimen/small"
                android:left="@dimen/small"
                android:right="@dimen/small"
                android:top="@dimen/small" />

            <corners
                android:bottomLeftRadius="@dimen/large"
                android:bottomRightRadius="@dimen/large"
                android:topLeftRadius="@dimen/large"
                android:topRightRadius="@dimen/large" />
        </shape>
    </item>
</layer-list>